extends layout_admin

block content
    h1 Vagtplan

    // CSS
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/main.min.css')

    // Scripts
    script(src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js')
    script(src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/resource-timeline.global.min.js')

    div#calendar(style="max-width: 1200px; margin: 40px auto;")

    script.
        try {
            const events = !{JSON.stringify(events)};
            const resources = !{JSON.stringify(resources)};

            console.log("üí¨ Events:", events);
            console.log("üìã Resources:", resources);

            document.addEventListener('DOMContentLoaded', function () {
                var calendarEl = document.getElementById('calendar');
                var calendar = new FullCalendar.Calendar(calendarEl, {
                    initialView: 'resourceTimelineWeek',
                    slotMinTime: "07:00:00",
                    slotMaxTime: "20:00:00",
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'resourceTimelineWeek,dayGridMonth'
                    },
                    resources: resources,
                    events: events
                });

                calendar.render();
            });
        } catch (err) {
            console.error("‚ùå Fejl i JSON:", err);
        }
