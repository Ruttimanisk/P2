extends layout_admin

block content
    h1 Vagtplan

    // CSS
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/@fullcalendar/resource-timeline/main.min.css')

    // JS (kun √âN samlet bundle)
    script(src='https://cdn.jsdelivr.net/npm/@fullcalendar/resource-timeline/main.global.min.js')


    // ‚úÖ Calendar container
    div#calendar(style="max-width: 1000px; margin: 40px auto;")

    // ‚úÖ Initialization script
    script.
        try {
            const events = !{JSON.stringify(events)};
            const resources = !{JSON.stringify(resources)};

            console.log("üìÖ Events:", events);
            console.log("üßë Resources:", resources);

            document.addEventListener('DOMContentLoaded', function () {
                var calendarEl = document.getElementById('calendar');
                var calendar = new FullCalendarResourceTimeline.Calendar(calendarEl, {
                    initialView: 'resourceTimelineWeek',
                    slotMinTime: "07:00:00",
                    slotMaxTime: "20:00:00",
                    allDaySlot: false,
                    resourceAreaHeaderContent: 'Medarbejdere',
                    headerToolbar: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'resourceTimelineWeek'
                    },
                    resources: resources,
                    events: events
                });
                calendar.render();
            });
        } catch (err) {
            console.error("‚ùå Fejl i JSON:", err);
        }


