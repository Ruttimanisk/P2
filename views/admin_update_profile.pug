extends layout_admin

block content
    head
        meta(charset='UTF-8')
        title Update Profile
        meta(name='viewport' content='width=device-width, initial-scale=1')
        link(rel='stylesheet' href='/stylesheets/UpdateProfile.css')
        link(rel='stylesheet' href='/stylesheets/Schedule.css')

    h1 Update Profile

    form(action=`/admin/update_profile/${userId}` method="POST")
        table#update_profile
            tr
                th First Name:
                td
                    input.update_input(
                        type="text",
                        name="first_name",
                        value=first_name,
                        required,
                    )
            tr
                th Family Name:
                td
                    input.update_input(
                        type="text",
                        name="family_name",
                        value=family_name,
                        required,
                    )
            tr
                th Date of Birth:
                td
                    input.update_input(
                        type="date",
                        name="date_of_birth",
                        value=date_of_birth,
                        required,
                    )
            tr
                th Status:
                td
                    select#update_status(name='status' required)
                        if statuss === "Employee"
                            option(value='Employee' selected) Employee
                            option#AdminOption(value='Admin') Admin
                        else
                            option(value='Employee') Employee
                            option#AdminOption(value='Admin' selected) Admin
            tr
                th Role:
                td
                    input.update_input(
                        type="text",
                        name="role",
                        value=role,
                        required,
                    )
            tr
                th Address:
                td
                    input.update_input(
                        type="text",
                        name="address",
                        value=address,
                        required,
                    )
            tr
                th Hourly Rate:
                td
                    input.update_input(
                        type="number",
                        name="hourly_rate",
                        value=hourly_rate,
                        required,
                    )
            tr
                th Hours per Week:
                td
                    input.update_input(
                        type="number",
                        name="hours_per_week",
                        value=hours_per_week,
                        required,
                    )
        button.save_changes_button(type="submit") Save Changes

    a#go_back(href="javascript:history.back()", class='hiper_link_style') - Go back

    if errors
        ul.error-list
            each err in errors
                li.error-item= typeof err === 'object' && err.msg ? err.msg : err
