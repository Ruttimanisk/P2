                firstDay: 1,
                contentHeight: 'auto',
                slotDuration: { days: 1 },
                slotLabelFormat: [{ weekday: 'short' }],
                slotMinTime: "00:00:00",
                slotMaxTime: "24:00:00",
                allDaySlot: false,
                displayEventTime: false,
                editable: false,
                selectable: false,
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'resourceTimelineWeek,dayGridMonth'
                },
                resourceAreaHeaderContent: 'Medarbejdere',
                resources: resources,
                events: events,
                eventSources: [], // For at vÃ¦re sikker pÃ¥, at den ikke laver fetch
            });
            calendar.render();
        });
