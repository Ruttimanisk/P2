extends layout_employee

block content
    h1 Min Vagtplan

    // FullCalendar stylesheets
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.11.3/main.min.css")

    // FullCalendar script
    script(src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.11.3/main.min.js")

    div#calendar(style="max-width: 1200px; margin: 40px auto;")

    // Events og Resources skal vÃ¦re korrekt injiceret
    script.
        const events = !{JSON.stringify(events || [])};
        const resources = !{JSON.stringify(resources || [])};

        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                schedulerLicenseKey: 'GPL-My-Project-Is-Open-Source',
                initialView: 'resourceTimelineWeek',
                firstDay: 1,
                contentHeight: 'auto',
                slotDuration: { days: 1 },
                slotLabelFormat: [{ weekday: 'short' }],
                slotMinTime: "00:00:00",
                slotMaxTime: "24:00:00",
                allDaySlot: false,
                displayEventTime: false,
                editable: false,        // ðŸ‘ˆ Ingen Ã¦ndring/move/resize
                selectable: false,      // ðŸ‘ˆ Ingen ny oprettelse
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'resourceTimelineWeek,dayGridMonth'
                },
                resourceAreaHeaderContent: 'Employees',
                resources: resources,
                events: events
            });
            calendar.render();
        });
