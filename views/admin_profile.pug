extends layout_admin

block content
    link(rel='stylesheet' href='/stylesheets/Schedule.css')
    style.
        #Profile td, #Profile th {
            border: 1px solid #707070;
            text-align: left;
            padding: 8px;
            background-color: #FAFAFA;
        }
        #Profile td {min-width: 170px;}
        #update_profile, #see_schedule {padding-top: 5px; padding-left: 5px; margin-left: 148px; margin-bottom: 5px; text-decoration-line: none; font-size: 17px;}

    h1 Profile

    table#Profile
        tr
            th Name:
            td #{fullname}
        tr
            th Date of Birth:
            td #{lifespan}
        tr
            th Status:
            td #{statuss}
        tr
            th Role:
            td #{role}
        tr
            th Address:
            td #{address}
        tr
            th Hourly Rate:
            td #{hourly_rate} DKK/h
        tr
            th Hours per Week:
            td #{hours_per_week}
        tr
            th Hours This Week:
            - let hoursThisWeek = payThisWeek / hourly_rate
            td #{hoursThisWeek} Hours
        tr
            th Pay This Week:
            td #{payThisWeek} Kroner

    a#update_profile(href=`/admin/update_profile/${userId}`, class='hiper_link_style') Update profile
    br
    if view_profile
        a#see_schedule(href=`/admin_edit_employee_schedule/${userId}`, class='hiper_link_style') See schedule