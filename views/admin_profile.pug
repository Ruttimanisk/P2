extends layout_admin

block content
    head
    h1 Profile

    table(style="margin-top: 10px;" + "td, th { border: 1px solid #dddddd; text-align: left; padding: 8px;")#Profile

        tr
            th Name:
            td #{fullname}
        tr
            th Date of Birth:
            td #{lifespan}
        tr
            th Status:
            td #{statuss}
        tr
            th Address:
            td #{address}
        tr
            th Hourly Rate:
            td #{hourly_rate}kr/hour
        tr
            th Hours per Week:
            td #{hours_per_week}
