extends layout_admin

block content
    style.
        #Profile td, #Profile th {
            border: 1px solid #707070;
            text-align: left;
            padding: 8px;
            background-color: #FAFAFA;
        }
        #Profile td {min-width: 170px;}
        #update_profile, #see_schedule {padding: 5px; text-decoration-line: none; font-size: 17px;}
        #see_schedule {margin-left: 148px;}

    h1 Profile

    table#Profile
        tr
            th Name:
            td #{fullname}
        tr
            th Date of Birth:
            td #{lifespan}
        tr
            th Status:
            td #{statuss}
        tr
            th Role:
            td #{role}
        tr
            th Address:
            td #{address}
        tr
            th Hourly Rate:
            td #{hourly_rate} dkk/h
        tr
            th Hours per Week:
            td #{hours_per_week}

    a#update_profile(href=`/update_profile/${userId}`) - Update profile
    br
    if view_profile
        a#see_schedule(href=`/admin_edit_employee_schedule/${userId}`) - See schedule